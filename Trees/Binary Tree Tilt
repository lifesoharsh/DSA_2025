class Solution {
public:
    int sumOfTree(TreeNode* root, int& tilt){
        if(!root) return 0;
        if(!root->left && !root->right) return root->val;

        int l = sumOfTree(root->left,tilt);
        int r = sumOfTree(root->right,tilt);

        tilt += abs(l-r);

        return l+r+root->val;
    }

    int findTilt(TreeNode* root) {
        int tilt = 0;
        sumOfTree(root,tilt);
        return tilt;        
    }
};
