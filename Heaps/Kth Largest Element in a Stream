class KthLargest {
public:
    priority_queue<int, vector<int>, greater<int>> score;
    int k;

    KthLargest(int k, vector<int>& nums) {
        this->k = k;
        for(int num:nums){
            score.push(num);
            if(score.size() > k) score.pop();
        }
    }
    
    int add(int val) {
        score.push(val);
        if(score.size() > k) score.pop();
        
        return score.top();
    }
};
