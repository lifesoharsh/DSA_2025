class Solution {
public:
    vector<int> productExceptSelf(vector<int>& nums) {
        int n = nums.size();
        vector<int> product(n);
        product[0] = 1;
        int prefix = 1, postfix = 1;

        for(int i = 1; i < n; i++){
            prefix = nums[i-1] * prefix;
            product[i] = prefix;
        }
        for(int i = n - 2; i >= 0; i--){
            postfix = nums[i+1] * postfix;
            product[i] *= postfix;
        }
        return product;
    }
};
